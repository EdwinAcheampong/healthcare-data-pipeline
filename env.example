# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/msc_project
MONGO_URI=mongodb://localhost:27017/healthcare_data
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=localhost
API_PORT=8000
API_SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=jwt-secret-key-here

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=msc-project-data

AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string
AZURE_CONTAINER_NAME=healthcare-data

# Data Sources
SYNTHEA_DATA_PATH=./data/synthea/
PROCESSED_DATA_PATH=./data/processed/
RAW_DATA_PATH=./data/raw/

# ML Model Configuration
MODEL_REGISTRY_PATH=./models/
EXPERIMENT_TRACKING_URI=./mlruns/
MODEL_SERVING_PORT=8001

# Logging & Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9090

# Development Settings
DEBUG=True
TESTING=False
ENVIRONMENT=development

# Healthcare Data Processing
FHIR_SERVER_URL=http://localhost:8080/fhir
HL7_VALIDATION_ENABLED=True
PHI_ANONYMIZATION=True

# Airflow Configuration (if using)
AIRFLOW_HOME=./airflow
AIRFLOW_WEBSERVER_PORT=8080
AIRFLOW_SCHEDULER_HEARTBEAT_SEC=5

# Jupyter Configuration
JUPYTER_PORT=8888
JUPYTER_TOKEN=your-jupyter-token

